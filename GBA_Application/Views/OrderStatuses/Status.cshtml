@model IEnumerable<GBA_Application.Models.OrderStatuses>

@{
    ViewData["Title"] = "Status";
}

<h1>Status</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedFinishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimatedFinishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.StatusDescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderStatusesId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderStatusesId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderStatusesId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>